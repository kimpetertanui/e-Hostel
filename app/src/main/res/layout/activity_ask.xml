<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AskActivity">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Peter Kimeli"
        android:textSize="16sp"
        android:textStyle="normal|bold|italic"
        android:typeface="serif"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/track"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:typeface="serif"
        />
    <TextView
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:text="Track : Android"
        android:layout_below="@id/name"
        android:textStyle="normal|bold|italic"
        android:typeface="serif"
        />
    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:text="Country: Kenya"
        android:layout_below="@id/track"
        android:textStyle="normal|bold|italic"
        android:typeface="serif"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:text="Email: kimelipeter20@gmail.com"
        android:layout_below="@id/country"
        android:textStyle="normal|bold|italic"
        android:typeface="serif"
        />
    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:text="Phone Number: 0708995320"
        android:layout_below="@id/email"
        android:textStyle="normal|bold|italic"
        android:typeface="serif"
        />
    <TextView
        android:id="@+id/slack_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:text="Slack Username: @Peter Kimeli"
        android:layout_below="@id/phone_number"
        android:typeface="serif"
        android:textStyle="normal|bold|italic"
        />

</RelativeLayout>